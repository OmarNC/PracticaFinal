<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PracticaFinal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetAPI="L">@color/orange</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BotonFlotante" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="color">@color/white</item>
        <item name="background">@color/orange</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="BotonFlotanteDelete" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="color">@color/white</item>
        <item name="background">@color/rojo_1</item>
        <item name="backgroundTint">@color/rojo_1</item>
    </style>


</resources>